#include<stdio.h>

#define Max_size 10
int queue[Max_size],front=-1,rear=-1;
void push();
int pop();
int peek();
void display();
int isEmpty();
int isFull();

int main()
{
    int choice;
    do{
        printf("\n1.push\n2.pop\n3.dispaly\n4.peek\n5.exit\n");
        printf("enter your choice:");
        scanf("%d",&choice);
        switch(choice){
            case 1:
                push();
                break;
            case 2:
                int n=pop();
                if(n==-1)
                    printf("queue is empty!\n");
                else
                    printf("element %d is deleted",n);
                break;
            case 3:
                display();
                break;
            case 4:
                int num=peek();
                if(num==-1)
                    printf("queue is empty!\n");
                else
                    printf("peek element is: %d",num);
                break;
        }
    }while(choice!=5);
}
void push()
{

    if(isFull())
    {
        printf("\nQueue is full");
        return;
    }
    int ele;
    printf("enter element:");
    scanf("%d",&ele);
    if(rear==-1 && front==-1)
    {
        rear=0;
        front=0;
        queue[rear]=ele;
        return;
    }
    queue[++rear]=ele;
}
int pop()
{
    if(isEmpty())
    {
        return -1;
    }
    int item = queue[front];
    if(rear==front){
        rear=-1;
        front=-1;
    }
    else{
        front++;
    }
    return item;
}
int peek()
{
    if(isEmpty())
        return -1;
    else
        return queue[front];
}
void display()
{
    if(isEmpty())
    {
        printf("\nQueue is empty");
    }
    else
    {
        printf("-------------------------\n");
        for(int i=front;i<=rear;i++)
        {
            printf("%d\t",queue[i]);
        }
        printf("\n-------------------------");
    }
}
int isEmpty()
{
    if(front==-1)
        return 1;
    return 0 ;
}
int isFull()
{
    if(rear>=Max_size-1)
        return 1;
    return 0;
}
