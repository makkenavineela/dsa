#include<stdio.h>

#define SIZE 10

void push(int value);
void pop();
void display();

int stack[SIZE], top = -1;

void main()
{
   int value, choice;
   do{
      printf("\n\n---------------------------\n\n");
      printf("1. Push\n2. Pop\n3. Display\n4. Exit");
      printf("\nEnter your choice: ");
      scanf("%d",&choice);
      switch(choice){
	 case 1: printf("Enter the value: ");
		 scanf("%d",&value);
		 push(value);
		 break;
	 case 2:
	     pop();
		 break;
	 case 3:
         display();
		 break;
	 default:
	     printf("\nWrong selection!");

    }

    }while(choice!=4);

}

void push(int value)
{
   if(top == SIZE-1)
      printf("\noverfolw");
   else{
      top++;
      stack[top] = value;
   }
}

void pop(){
   if(top == -1)
      printf("\nunderfolw");
   else{
      top--;
   }
}

void display()
{
   if(top == -1)
      printf("\nStack is Empty");
   else{
      int i;
      printf("\nStack elements are:\n");
      for(i=top; i>=0; i--)
      {
        printf("%d\n",stack[i]);
      }
   }
}
